<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>

<AnchorPane prefHeight="480.0" prefWidth="671.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.gameoflife.view.SimulatorSceneController">
   <children>
      <GridPane fx:id="grid" alignment="CENTER" hgap="1.0" layoutX="-2.0" layoutY="-6.0" prefWidth="203.0" vgap="1.0">

      </GridPane>
      <Button fx:id="startSim" mnemonicParsing="false" onAction="#startSimulation" text="Start" />
      <Button fx:id="stopSim" mnemonicParsing="false" onAction="#stopSimulation" text="Stop" />
      <Button fx:id="nextStep" mnemonicParsing="false" onAction="#nextSimulationStep" text="Next" textAlignment="CENTER" />
      <Button fx:id="resetSim" mnemonicParsing="false" onAction="#reset" text="Reset" />
      <Button fx:id="save" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#saving" text="save" />
      <Button fx:id="saveToBase" mnemonicParsing="false" onAction="#saveToDataBase" text="saveToBase" />
   </children>
</AnchorPane>
